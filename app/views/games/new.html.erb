<h1>New Game</h1>
<ul>
  <% @letters.each do |letter| %>
  <span><%= letter %></span>
  <% end %>
</ul>

<form action="/score" method="post">
    <label for="guess">What is the longest word you can find?</label>
    <div class="form-group form-inline">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <input type="text" name="guess" id="guess" value="<%= params[:guess] %>" class="form-control form-control-lg flex-grow-1">
      <input type="submit" value="Play" class="btn btn-primary btn-lg">
    </div>
</form>


